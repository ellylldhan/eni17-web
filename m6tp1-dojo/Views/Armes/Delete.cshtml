@model m6tp1_dojo.Models.Arme

@{
    ViewBag.Title = "Suppression Arme";
}

<h2>Suppression</h2>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Arme</h4>
    @if (ViewContext.ViewData.ModelState.Count > 0)
    {
        <div>
            @foreach (var item in ViewContext.ViewData.ModelState.Values)
            {
                foreach (var subitem in item.Errors)
                {
                    <div class="alert-danger alert">@subitem.ErrorMessage</div>
                }
            }
        </div>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Degats)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Degats)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
