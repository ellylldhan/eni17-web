@model IEnumerable<m6tp1_dojo.Models.Samourai>

@{
    ViewBag.Title = "Dojo | Liste Samouraïs";
}

<h2>Liste des Samouraïs</h2>

<p>
    @Html.ActionLink("Créer un nouveau samouraÏ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Force)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arme)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Force)
            </td>
            <td>
                @if (item.Arme != null)
                {
                    @Html.DisplayFor(modelItem => item.Arme.Nom)
                }
                else
                {
                    @Html.Raw("Pas d'arme assignée")
                }
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
