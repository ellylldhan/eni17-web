@model m6tp1_dojo.Models.Samourai

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Force)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Force)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Arme)
    </dt>

    @if (Model.Arme != null)
    {
        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Arme.Degats)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Arme.Degats)
        </dd>
    }
    else
    {
        <dd>
            @Html.Raw("Aucune arme")
        </dd>
    }
</dl>

