@model IEnumerable<m6tp1_dojo.Models.Samourai>

@{
    ViewBag.Title = "Liste Samouraïs";
}

<h2>Liste des Samouraïs</h2>

<p>
    @Html.ActionLink("Créer un nouveau samouraÏ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Force)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtsMartiaux)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Force)
    </td>
    <td>
        @if (item.Arme != null)
        {
            @Html.DisplayFor(modelItem => item.Arme.Nom)
        }
        else
        {
            @Html.Raw("Pas d'arme assignée")
        }
    </td>
    <td>
        @if (item.ArtsMartiaux != null && item.ArtsMartiaux.Count > 0 )
        {
            foreach (var art in item.ArtsMartiaux)
            {
                @Html.DisplayFor(modelItem => art.Nom) 
                <br/>
            }
        }
        else
        {
            @Html.Raw("Aucun art martial")
        }
    </td>
    <td>
        @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Voir", "Details", new { id = item.Id }) |
        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
