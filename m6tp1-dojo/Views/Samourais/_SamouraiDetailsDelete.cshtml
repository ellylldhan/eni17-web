@model m6tp1_dojo.Models.Samourai

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Force)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Force)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Arme)
    </dt>

    @if (Model.Arme != null)
    {
        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Arme.Degats)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Arme.Degats)
        </dd>
    }
    else
    {
        <dd>
            @Html.Raw("Aucune arme")
        </dd>
    }

    <!--Liste Arts Martiaux-->
    <dt>
        @Html.DisplayNameFor(model => model.ArtsMartiaux)
    </dt>
    <dd>
        @if (Model.ArtsMartiaux != null)
        {
            foreach (var item in Model.ArtsMartiaux)
            {
                @Html.DisplayFor(model => item.Nom)
                <br/>
            }
        }
        else
        {
            @Html.Raw("Aucun art martial")
        }
    </dd>
</dl>

